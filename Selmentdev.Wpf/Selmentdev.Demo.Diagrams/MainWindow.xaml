                                CenterY="0.5"
                                ScaleX="{Binding ElementName=m_ZoomSlider, Path=Value}"
                                ScaleY="{Binding ElementName=m_ZoomSlider, Path=Value}" />
                        </Border.LayoutTransform>

                        <Diagrams:DiagramControl
                            Name="m_Editor"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            SnapsToDevicePixels="True">
                            <Diagrams:DiagramShape
                                Position="300,300"
                                Width="130"
                                Height="30"
                                ZIndex="1000"
                                IsSelected="True">
                                <Diagrams:DiagramShape.Content>
                                    <local:SomeDataInfo />
                                </Diagrams:DiagramShape.Content>
                            </Diagrams:DiagramShape>
                            <Diagrams:DiagramShape
                                ZIndex="200"
                                IsSelected="True"
                                Position="10, 10"
                                Width="200"
                                Height="100"
                                Geometry="{StaticResource MyGeometry}">
                            </Diagrams:DiagramShape>
                            <Diagrams:DiagramShape
                                ZIndex="200"
                                IsSelected="True"
                                Position="100, 10"
                                Width="200"
                                Height="100">
                            </Diagrams:DiagramShape>
                            <Diagrams:DiagramShape
                                Position="100,10"
                                Width="90"
                                Height="90"
                                ZIndex="100"
                                IsSelected="True"
                                Content="textbox"
                                Padding="0">
                                <Diagrams:DiagramShape.ContentTemplate>
                                    <DataTemplate>
                                        <TextBox
                                            Text="{Binding RelativeSource={RelativeSource AncestorType=Diagrams:DiagramItem,Mode=FindAncestor}, Path=Content}" />
                                    </DataTemplate>
                                </Diagrams:DiagramShape.ContentTemplate>
                            </Diagrams:DiagramShape>
                            <Diagrams:DiagramShape
                                Position="10,10"
                                Width="90"
                                Height="90"
                                ZIndex="100"
                                IsSelected="True"
                                Content="Hello"
                                Padding="0">
                                <Diagrams:DiagramShape.ContentTemplate>
                                    <DataTemplate>
                                        <Button
                                            Content="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch" />
                                    </DataTemplate>
                                </Diagrams:DiagramShape.ContentTemplate>
                            </Diagrams:DiagramShape>
                            <Diagrams:DiagramShape
                                Position="50,50"
                                Width="50"
                                Height="50"
                                RotationAngle="45"
                                ZIndex="101"
                                IsSelected="True"
                                Padding="0">
                                <Diagrams:DiagramShape.ContentTemplate>
                                    <DataTemplate>
                                        <Rectangle
                                            Fill="Plum"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch" />
