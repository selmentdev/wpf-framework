        <ToolBarTray
            DockPanel.Dock="Top">
            <ToolBar>
                <Slider
                    Width="160"
                    Minimum="0.1"
                    Maximum="10.0"
                    Name="m_ZoomSlider"
                    Value="1.0"
                    SmallChange="0.1"
                    TickPlacement="Both"
                    IsSnapToTickEnabled="True"
                    IsMoveToPointEnabled="True"
                    TickFrequency="0.1" />
                <Label
                    Content="{Binding ElementName=m_ZoomSlider, Path=Value}" />
            </ToolBar>
        </ToolBarTray>
